<div class="relative bg-white">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-center items-center py-6 md:justify-start md:space-x-10">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start lg:flex-1 truncate">
        <h1 class="text-xl-font0bold truncate">{{ shop.name }}</h1>
      </div>
      <!-- NAVIGATION MENU -->
      <div class="hidden md:flex space-x-10">
        {% for link in section.settings.menu.links %}
          {% if link.links != blank %}
            <div class="relative">
              <button class="inline-flex items-center">
                {{ link.title }}
                {% render 'icon-dropdown' %}
              </button>
            </div>
          {% else %}
            <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-700">
              {{ link.title }}
            </a>
          {% endif %}
        {% endfor %}
      </div>

      <!-- CART BUTTONS / ACCOUNT LINKS IF ENABLE -->

      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5 w-6">
        <a href="/cart" class="w-24 whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
           {% render 'icon-dropdown' %}
        </a>

      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "Heading Navigaation Menu"
      }
    ]
  }
{% endschema %}